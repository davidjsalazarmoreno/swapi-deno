{
  "watch": false,
  "scripts": {
    "watch": {
      "cmd": "deno run --allow-net --allow-read --allow-write server.ts",
      "desc": "Dev mode",
      "watch": true
    },
    "start": {
      "cmd": "deno run --reload --allow-net --allow-read --allow-write --lock=lock.json --lock-write server.ts",
      "desc": "Start server and reload deps"
    },    
    "create:db": {
      "cmd": "deno run --allow-net --allow-read --allow-write prepare-database.ts",
      "desc": "Create DB"
    },  
    "test": {
      "cmd": "deno test controllers/ database/ models/ --allow-read --allow-write",
      "desc": "Run tests"
    }
  }
}